function dcleanup {
  docker rm -v $(docker ps --filter status=exited -q 2>/dev/null) 2>/dev/null
  docker rmi $(docker images --filter dangling=true -q 2>/dev/null) 2>/dev/null
}

function dpull {
  docker images | grep -v REPOSITORY | awk '{print $1}' | xargs -L1 docker pull
}

# jetpack plugin remove
function jp-remove {
  rm -r "$HOME/Documents/Code/jetpack/tools/docker/wordpress/wp-content/plugins/$1"
}

# jetpack plugin reinstall
function jp-reinstall {
  dir=$(pwd)
  cd "$HOME/Documents/Code/jetpack/tools/docker/wordpress/wp-content/plugins"
  ln -sf "/usr/local/src/jetpack-monorepo/projects/plugins/$1" "$1"
  cd "$dir"
}
